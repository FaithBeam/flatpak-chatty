{
    "app-id": "org.chatty.chatty",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "chatty",
    "rename-icon": "chatty",
    "rename-desktop-file": "chatty.desktop",
    "finish-args": [
        "--socket=x11", "--share=ipc", "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--share=network",
        "--persist=.chatty"
    ],

    "modules": [
        {
            "name": "pysocks",
            "no-autogen": true,
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Anorov/PySocks/archive/1.6.8.tar.gz",
                    "sha256": "a7f32ce1ac2b3467b793fdf14b23ad2b3ae139bcb10b6331fdecdae97ac6b821"
                }
            ]
        },
        {
            "name": "six",
            "no-autogen": true,
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/benjaminp/six/archive/1.11.0.tar.gz",
                    "sha256": "927dc6fcfccd4e32e1ce161a20bf8cda39d8c9d5f7a845774486907178f69bd4"
                }
            ]
        },
        {
            "name": "websocket-client",
