            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/deactivated/python-iso3166.git"
                }
            ]
        },
        {
            "name": "pycryptodome",
            "no-autogen": true,
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
