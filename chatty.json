            ]
        },
        {
        	"name": "waf",
        	"no-autogen": true,
        	"buildsystem": "simple",
            "build-commands": [
                "python3 waf-light --make-waf",
                "install waf /app/bin"
            ],
        	"sources": [
        		{
        			"type": "archive",
        			"url": "https://github.com/waf-project/waf/archive/waf-2.0.4.tar.gz",
        			"sha256": "03c565d5246fc36ae8fa85d0398f9fe0042c8bf286760a687deafcbebde3f454"
        		}
        	]
        },
        {
            "name": "fribidi",
            "no-autogen": true,
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap",
                "./configure --prefix /app",
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/fribidi/fribidi.git"
                }
            ]
        },
        {
        	"name": "libass",
        	"sources": [
        		{
        			"type": "archive",
        			"url": "https://github.com/libass/libass/releases/download/0.14.0/libass-0.14.0.tar.gz",
        			"sha256": "8d5a5c920b90b70a108007ffcd2289ac652c0e03fc88e6eecefa37df0f2e7fdf"
        		}
        	]
        },
        {
        	"name": "ffmpeg",
        	"no-autogen": true,
        	"buildsystem": "simple",
        	"build-commands": [
        		"./configure --prefix=/app",
        		"make -j6",
        		"make install"
        	],
        	"sources": [
        		{
        			"type": "git",
        			"url": "https://github.com/FFmpeg/FFmpeg.git"
        		}
        	]
        },
        {
            "name": "zlib",
            "no-autogen": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/madler/zlib.git"
                }
            ]
        },
        {
            "name": "mpv",
            "no-autogen": true,
            "buildsystem": "simple",
            "build-commands": [
                "waf configure -j6",
                "waf",
                "waf install --destdir=/app -f",
                "install /app/run/build/mpv/usr/local/bin/mpv /app/bin/mpv"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mpv-player/mpv.git"
                }
            ]
        },
        {
            "name": "oracle-jre",
            "no-autogen": true,
            "sources" : [
                {
                    "type": "file",
                    "url": "http://javadl.oracle.com/webapps/download/AutoDL?BundleId=227542_e758a0de34e24606bca991d704f6dcbf",
                    "sha256": "3c697fe1b8ef4d93ffb2c944c3b38b64697f5427c183f659e527a6fecccd789f",
                    "dest-filename": "jre.tar.gz"
                },
                {
                    "type": "file",
                    "path": "oracle-jre-Makefile",
                    "dest-filename": "Makefile"
                }
            ]
        },
        {
            "name": "chatty",
            "no-autogen": true,
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/chatty/chatty/releases/download/v0.9/Chatty_0.9.zip",
                    "sha256": "aa99fd3535c45a4dd3666f872eb7a72744ca57588fd5b78f208e6114308e5079",
                    "dest-filename": "Chatty.zip"
                },
                {
                    "type": "file",
                    "path": "chatty.desktop"
                },
                {
                    "type": "file",
                    "path": "chatty.png"
                },
                {
                    "type": "file",
                    "path": "chatty-Makefile",
                    "dest-filename": "Makefile"
                },
                {
                    "type": "file",
                    "path": "chatty.sh",
                    "dest-filename": "chatty.sh"
                }
            ]
        }
    ]
