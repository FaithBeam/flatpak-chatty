{
    "app-id": "org.chatty.chatty",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "chatty",
    "rename-icon": "chatty",
    "rename-desktop-file": "chatty.desktop",
    "finish-args": [
        "--socket=x11", "--share=ipc", "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--share=network",
        "--persist=.chatty"
    ],
    "cleanup": [ "*.la", "*.a", "/lib/debug", "/lib/pkgconfig", "/run", "/share/man" ],
    "modules": [
        {
            "name": "pysocks",
            "no-autogen": true,
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "cleanup": [ "/lib" ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Anorov/PySocks.git"
                }
            ]
        },
        {
            "name": "six",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/benjaminp/six.git"
                }
            ]
        },
        {
            "name": "websocket-client",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/websocket-client/websocket-client.git"
                }
            ]
        },
        {
            "name": "iso3166",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/deactivated/python-iso3166.git"
                }
            ]
        },
        {
            "name": "pycryptodome",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Legrandin/pycryptodome.git"
                }
            ]
        },
        {
            "name": "certifi",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/certifi/python-certifi.git"
                }
            ]
        },
        {
            "name": "urllib3",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/shazow/urllib3/archive/1.22.tar.gz",
                    "sha256": "dd60d4104b871943e06be69e296e97ede9d42edf6ba534f0268aee932a601e2a"
                }
            ]
        },
        {
            "name": "idna",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kjd/idna.git"
                }
            ]
        },
        {
            "name": "chardet",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/chardet/chardet/archive/3.0.4.tar.gz",
                    "sha256": "d5620025cfca430f6c2e28ddbc87c3c66a5c82fa65570ae975c92911c2190189"
                }
            ]
        },
        {
            "name": "requests",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/requests/requests.git"
                }
            ]
        },
        {
            "name": "iso639",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/noumar/iso639.git"
                }
            ]
        },
        {
            "name": "streamlink",
            "no-autogen": true,
            "ensure-writable": [ "/lib/python3.5/site-packages/easy-install.pth" ],
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/streamlink/streamlink.git"
                }
            ]
        },
        {
        	"name": "waf",
        	"no-autogen": true,
        	"buildsystem": "simple",
            "build-commands": [
                "python3 waf-light --make-waf",
                "install waf /app/bin"
            ],
        	"sources": [
        		{
        			"type": "git",
        			"url": "https://github.com/waf-project/waf.git"
        		}
        	]
        },
        {
            "name": "fribidi",
            "config-opts": [
                    "--disable-docs"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/fribidi/fribidi.git"
                }
            ]
        },
        {
        	"name": "libass",
            "make-args": [
                "-j4"
            ],
        	"sources": [
        		{
        			"type": "git",
        			"url": "https://github.com/libass/libass.git"
        		}
        	]
        },
        {
        	"name": "ffmpeg",
        	"no-autogen": true,
            "config-opts": [
                "--disable-programs",
                "--disable-doc",
                "--prefix=/app"
            ],
            "make-args": [
                "-j4"
            ],
            "cleanup": [ "/share/ffmpeg" ],
        	"sources": [
        		{
        			"type": "git",
        			"url": "https://github.com/FFmpeg/FFmpeg.git"
        		}
        	]
        },
        {
            "name": "zlib",
            "no-autogen": true,
            "make-args": [
                "-j4"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/madler/zlib.git"
                }
            ]
        },
        {
            "name": "mpv",
            "no-autogen": true,
            "buildsystem": "simple",
            "build-commands": [
                "waf configure --disable-manpage-build",
                "waf -j4",
                "waf install --destdir=/app -f",
                "install /app/run/build/mpv/usr/local/bin/mpv /app/bin/mpv"
            ],
            "cleanup": [ "/usr", "/etc"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mpv-player/mpv.git"
                }
            ]
        },
        {
            "name": "oracle-jre",
            "no-autogen": true,
            "sources" : [
                {
                    "type": "file",
                    "url": "http://javadl.oracle.com/webapps/download/AutoDL?BundleId=227542_e758a0de34e24606bca991d704f6dcbf",
                    "sha256": "3c697fe1b8ef4d93ffb2c944c3b38b64697f5427c183f659e527a6fecccd789f",
                    "dest-filename": "jre.tar.gz"
                },
                {
                    "type": "file",
                    "path": "oracle-jre-Makefile",
                    "dest-filename": "Makefile"
                }
            ]
        },
        {
            "name": "chatty",
            "no-autogen": true,
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/chatty/chatty/releases/download/v0.9/Chatty_0.9.zip",
                    "sha256": "aa99fd3535c45a4dd3666f872eb7a72744ca57588fd5b78f208e6114308e5079",
                    "dest-filename": "Chatty.zip"
                },
                {
                    "type": "file",
                    "path": "chatty.desktop"
                },
                {
                    "type": "file",
                    "path": "chatty.png"
                },
                {
                    "type": "file",
                    "path": "chatty-Makefile",
                    "dest-filename": "Makefile"
                },
                {
                    "type": "file",
                    "path": "chatty.sh",
                    "dest-filename": "chatty.sh"
                }
            ]
        }
    ]
}
